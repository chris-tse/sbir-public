{{#each passErr}}
    <div class="alert alert-danger">{{this}}</div>
{{/each}}
{{#each success}}
    <div class="alert alert-success">{{this}}</div>
{{/each}}
<h3>Change Password</h3>
<form action="/profile/changepassword" method="POST">
    <div class="form-group">
        <label class="text-center" for="name">Current Password</label>
        <input type="password" class="form-control" name="currPassword">
    </div>
    <div class="form-group">
        <label class="text-center" for="title">New Password</label>
        <input type="password" class="form-control" name="newPassword">
    </div>
    <div class="form-group">
        <label class="text-center" for="email">Confirm New Password</label>
        <input type="password" class="form-control" name="newPasswordConf">
    </div>
    <button type="submit" class="btn btn-primary">Change Password</button>
</form>
<hr>
<h3>Edit Profile</h3>
<form action="/profile/edit" method="POST">
    <div class="form-group">
        <label class="text-center" for="name">Full Name</label>
        <input type="text" class="form-control" value="{{name}}" name="name" placeholder="Jane Doe" >
    </div>
    <div class="form-group">
        <label class="text-center" for="title">Title</label>
        <input type="text" class="form-control" value="{{userTitle}}" name="title" placeholder="Position or title">
    </div>
    <div class="form-group">
        <label class="text-center" for="email">E-mail</label>
        <input type="text" class="form-control" value="{{email}}" name="email" >
    </div>
    <div class="form-group">
        <label class="text-center" for="phone">Phone Number</label>
        <input type="tel" class="form-control" value="{{phone}}" name="phone" placeholder="4051235555">
    </div>
    <div class="row">
        <div class="col">
            <div class="form-group">
                <label class="text-center" for="city">City</label>
                <input type="text" class="form-control" name="city" value="{{city}}" placeholder="Name of city">
            </div>
        </div>
        <div class="col">
            <label for="state" class="text-center">State</label>
            <select class="form-control" name="state" id="state-select" value="{{state}}">
